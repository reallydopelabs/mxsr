{{!< default}}

{{#post}}

<main>
  <article class="py-8">
    <header class="">
      <div class="container">
        <h1 class="text-5xl uppercase font-bold border-b border-neutral-400 pb-8 tracking-tighter lg:text-7xl xl:text-8xl">{{ title }}</h1>
        <div class="mt-2 font-bold text-xl">{{ authors }} &mdash; <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM YYYY"}}</time></div>

        {{#if feature_image}}
          <figure class="py-8">
            <img
              srcset="{{img_url feature_image size="s"}} 300w,
                {{img_url feature_image size="m"}} 600w,
                {{img_url feature_image size="l"}} 1000w,
                {{img_url feature_image size="xl"}} 2000w"
              sizes="(min-width: 1400px) 1400px, 92vw"
              src="{{img_url feature_image size="xl"}}"
              alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            />
            {{#if feature_image_caption}}
              <figcaption class="mt-2 font-bold">{{feature_image_caption}}</figcaption>
            {{/if}}
          </figure>
        {{/if}}
      </div>
    </header>

    <section class="container">
      <div class="prose prose-mxsr prose-xl">
        {{content}}
      </div>
    </section>

    {{!-- <footer class="container mt-12">
      {{comments}}
    </footer> --}}
  </article>
</main>

{{/post}}
